<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    tools:context=".UI_Components.ActivityChooseStatistics">

    <TextView
        android:id="@+id/frequent_words"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@drawable/rounded_button"
        android:text="Frequent words last week"
        android:padding="10dp"
        android:textAppearance="@style/accept"
        android:gravity="center"
        app:drawableEndCompat="@drawable/ic_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="160dp" />

    <TextView
        android:id="@+id/textView_keyboard_changes"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@drawable/rounded_button"
        android:text="Keyboard Changes"
        android:padding="10dp"
        android:textAppearance="@style/accept"
        android:gravity="center"
        app:drawableEndCompat="@drawable/ic_change"
        app:layout_constraintTop_toBottomOf="@id/frequent_words"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView_offensive_hour"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@drawable/rounded_button"
        android:text="Offensive content hours"
        android:padding="10dp"
        android:textAppearance="@style/accept"
        android:gravity="center"
        app:drawableEndCompat="@drawable/ic_hour"
        app:layout_constraintTop_toBottomOf="@id/textView_keyboard_changes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:background="@drawable/rounded_button"
        android:text="Back"
        android:padding="10dp"
        android:textAppearance="@style/accept"
        android:gravity="center"
        app:drawableEndCompat="@drawable/ic_back"
        app:layout_constraintTop_toBottomOf="@id/textView_offensive_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
